{
    "compilerOptions": {
        "typeRoots": [
            "./types"
        ],
        "lib": [
            "es2015"
        ],
        "types": [
            "node",
            "mocha",
            "truffle-contracts",
            "chai"
        ],
        "module": "commonjs",
        "noImplicitAny": false,
        "noImplicitReturns": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "sourceMap": true,
        "esModuleInterop": true
    }
}
